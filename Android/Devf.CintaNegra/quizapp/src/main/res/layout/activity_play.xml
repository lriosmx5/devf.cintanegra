<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="mx.devf.quizapp.PlayActivity">
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        />
    <FrameLayout
        android:layout_below="@+id/tvUserName"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:id="@+id/layout_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton android:id="@+id/btnLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_chevron_left_white_48dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/colorPrimaryLight"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/quiz_img_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_layout"
            android:layout_toRightOf="@+id/layout_arrow_left"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_chevron_right_white_48dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/colorPrimaryLight"
                />

        </LinearLayout>


    </LinearLayout>
